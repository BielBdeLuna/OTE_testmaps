            windowDef button_menu {
                rect        10, 0, 100, 40
                visible     1
                backcolor   1.0, 0.0, 0.0, 1.0
                forecolor   1, 1, 1, 1
                text        "MENU"
                textalign   1
                textscale   3
                font        "fonts/english"
                float       "clicked" 0
                onAction {
                    if ( "button_menu::clicked" == 0 ) {
                        // moves binder down
                        transition "binder::rect" "10, 60, 600, 390" "10, 410, 600, 390" "300" ;
                        set "button_menu::clicked" "1";
                    } else {
                        // moves binder up again
                        transition "binder::rect" "10, 410, 600, 390" "10, 60, 600, 390" "300" ;
                        set "button_menu::clicked" "0";
                    }

                }
            }
            
            windowDef button_area {
