                //matcolor    1.0, 0.25, 0.25, 1.0
                forecolor   1.0, 1.0, 1.0, 1.0
                text        "Toggle button"
                textalign   1
                textscale   3
                font        "fonts/english"
                float       "alreadyClicked" 0
                onAction {
                    if ( "button_area::alreadyClicked" == 0 ) {
                        // Makes the area_2 invisible
                        set "area_2::visible" "0";
                        set "button_area::alreadyClicked" "1";
                    } else {
                        // Makes the area_2 visible again
                        set "area_2::visible" "1";
                        set "button_area::alreadyClicked" "0";
